  background: white;
}

.form-select:focus {
  outline: none;
  border-color: #3b82f6;
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.import-details {
  margin-top: 0.5rem;
  padding: 0.5rem 0.625rem;
  background: #f9fafb;
  border-radius: 6px;
  border: 1px solid #e5e7eb;
}

.import-details p {
  margin: 0.125rem 0;
  font-size: 0.8125rem;
  color: #374151;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .csv-import-modal {
    width: 100%;
    max-height: 90vh;
    margin: 0.5rem;
  }
  
  .modal-header {
    padding: 0.625rem 0.875rem;
  }
  
  .modal-content {
    padding: 0.875rem;
  }
  
  .file-upload-area {
    flex-direction: column;
    align-items: stretch;
  }
  
  .file-upload-label,
  .btn-primary,
  .btn-secondary {
    width: 100%;
    justify-content: center;
  }
  
  .step-actions {
    flex-direction: column;
  }
  
  .data-preview {
    overflow-x: auto;
  }
  
  .data-preview table {
    min-width: 500px;
  }
}

@media (max-width: 480px) {
  .modal-header h2 {
