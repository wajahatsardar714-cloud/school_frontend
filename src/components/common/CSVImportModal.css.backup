.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  padding: 1rem;
}

.csv-import-modal {
  background: white;
  padding: 0;
  border-radius: 8px;
  max-width: 650px;
  width: 100%;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.75rem 1rem;
  border-bottom: 1px solid #e5e7eb;
  background: #f9fafb;
}

.modal-header h2 {
  margin: 0;
  color: #1f2937;
  font-size: 1.125rem;
  font-weight: 600;
}

.close-btn {
  background: none;
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
  color: #6b7280;
  padding: 0.25rem;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 1.75rem;
  height: 1.75rem;
  border-radius: 4px;
  transition: background-color 0.2s;
}

.close-btn:hover {
  background-color: #f3f4f6;
  color: #374151;
}

.modal-content {
  flex: 1 1 auto;
  overflow-y: auto;
  overflow-x: hidden;
  padding: 1rem;
  min-height: 0;
}

.step-content {
  /* Let content flow naturally */
}

.step-content h3 {
  margin: 0 0 0.625rem 0;
  color: #1f2937;
  font-size: 0.95rem;
  font-weight: 600;
}

.step-content p {
  margin: 0 0 0.75rem 0;
  font-size: 0.8125rem;
  color: #6b7280;
  line-height: 1.4;
}

.form-group {
  margin-bottom: 0.75rem;
}

.form-group label {
  display: block;
  margin-bottom: 0.375rem;
  font-weight: 600;
  color: #374151;
  font-size: 0.8125rem;
}

.form-group select {
  width: 100%;
  padding: 0.5rem 0.625rem;
  border: 1px solid #d1d5db;
  border-radius: 6px;
  font-size: 0.8125rem;
  transition: border-color 0.2s, box-shadow 0.2s;
}

.form-group select:focus {
  outline: none;
  border-color: #3b82f6;
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.form-group select:disabled {
  background-color: #f9fafb;
  color: #6b7280;
  cursor: not-allowed;
}

.upload-section {
  margin: 0.5rem 0 0 0;
}

.file-upload-area {
  display: flex;
  gap: 0.5rem;
  align-items: center;
  justify-content: flex-start;
  margin-bottom: 0.75rem;
  flex-wrap: wrap;
}

.file-input {
  display: none;
}

.file-upload-label {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.375rem;
  padding: 0.5rem 1rem;
  background-color: #3b82f6;
  color: white;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  font-size: 0.8125rem;
  font-weight: 500;
  transition: background-color 0.2s;
  white-space: nowrap;
}

.file-upload-label:hover {
  background-color: #2563eb;
}

.preview-section {
  background: #f9fafb;
  padding: 0.75rem;
  border-radius: 6px;
  border: 1px solid #e5e7eb;
  margin-top: 0.5rem;
  margin-bottom: 1rem;
}

.preview-section h4 {
  margin: 0 0 0.5rem 0;
  color: #1f2937;
  font-size: 0.875rem;
  font-weight: 600;
}

.data-preview {
  border-radius: 4px;
  overflow: auto;
  border: 1px solid #e5e7eb;
  max-height: 500px;
  margin-top: 0.5rem;
  background: white;
}

.data-preview table {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 0;
  background: white;
  font-size: 0.75rem;
}

.data-preview th,
.data-preview td {
  padding: 0.375rem 0.5rem;
  text-align: left;
  border-bottom: 1px solid #e5e7eb;
  min-width: 100px;
  vertical-align: middle;
}

.data-preview th:first-child,
.data-preview td:first-child {
  min-width: 40px;
  max-width: 40px;
  text-align: center;
}

.data-preview th {
  background-color: #f3f4f6;
  font-weight: 600;
  color: #374151;
  border-bottom: 2px solid #e5e7eb;
  position: sticky;
  top: 0;
  z-index: 1;
}

.data-preview td {
  color: #6b7280;
}

.data-preview td input {
  font-family: inherit;
}

.data-preview td input:focus {
  outline: none;
  border-color: #3b82f6 !important;
  box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.1);
}

.data-preview p {
  text-align: center;
  padding: 0.5rem;
  color: #6b7280;
  font-size: 0.75rem;
  margin: 0;
  font-style: italic;
}

.step-actions {
  display: flex;
  justify-content: flex-end;
  gap: 0.5rem;
  margin-top: 0.75rem;
  padding-top: 0.75rem;
  border-top: 1px solid #e5e7eb;
  flex-wrap: wrap;
}

.step-actions.space-between {
  justify-content: space-between;
}

.btn-primary, .btn-secondary {
  padding: 0.5rem 1rem;
  border: none;
  border-radius: 6px;
  font-size: 0.8125rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.375rem;
  white-space: nowrap;
  flex-shrink: 0;
}

.btn-primary {
  background-color: #3b82f6;
  color: white;
}

.btn-primary:hover:not(:disabled) {
  background-color: #2563eb;
}

.btn-primary:disabled {
  background-color: #9ca3af;
  cursor: not-allowed;
}

.btn-secondary {
  background-color: #f3f4f6;
  color: #374151;
  border: 1px solid #d1d5db;
  min-width: auto;
}

.btn-secondary:hover:not(:disabled) {
  background-color: #e5e7eb;
}

.results-summary {
  margin-bottom: 0.75rem;
}

.success-message {
  padding: 0.75rem;
  background-color: #dcfce7;
  border: 1px solid #bbf7d0;
  border-radius: 6px;
  color: #166534;
  margin-bottom: 0.5rem;
  font-weight: 500;
  font-size: 0.8125rem;
}

.warning-message {
  padding: 0.75rem;
  background-color: #fef3c7;
  border: 1px solid #fde68a;
  border-radius: 6px;
  color: #92400e;
  font-weight: 500;
  font-size: 0.8125rem;
}

.error-message {
  padding: 0.75rem;
  background-color: #fee2e2;
  border: 1px solid #fecaca;
  border-radius: 6px;
  color: #dc2626;
  margin-top: 0.75rem;
  font-size: 0.75rem;
  white-space: pre-line;
}

/* New styles for enhanced CSV import */
.step-indicator {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-bottom: 0.875rem;
  padding-bottom: 0.625rem;
  border-bottom: 2px solid #e5e7eb;
}

.step-number {
  width: 1.75rem;
  height: 1.75rem;
  border-radius: 50%;
  background: #e5e7eb;
  color: #6b7280;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 0.8125rem;
}

.step-number.active {
  background: #3b82f6;
  color: white;
}

.step-label {
  font-weight: 600;
  color: #1f2937;
  font-size: 0.9375rem;
}

.info-box {
  background: #eff6ff;
  border: 1px solid #bfdbfe;
  border-left: 3px solid #3b82f6;
  padding: 0.625rem 0.75rem;
  border-radius: 6px;
  margin-bottom: 0.75rem;
}

.info-box p {
  margin: 0;
  font-size: 0.8125rem;
  color: #1e40af;
  line-height: 1.4;
}

.info-box ul {
  margin: 0.375rem 0 0 0;
  padding-left: 1.25rem;
  color: #1e40af;
  font-size: 0.75rem;
}

.info-box li {
  margin: 0.125rem 0;
  line-height: 1.4;
}

.warning-box {
  background: #fffbeb;
  border: 1px solid #fde68a;
  border-left: 3px solid #f59e0b;
  padding: 0.625rem;
  border-radius: 6px;
  margin: 0.5rem 0;
  max-height: 100px;
  overflow-y: auto;
}

.warning-box strong {
  color: #92400e;
  font-size: 0.8125rem;
}

.warning-box div {
  color: #92400e;
  font-size: 0.75rem;
  margin-top: 0.25rem;
}

.target-info {
  background: #f0fdf4;
  border: 1px solid #bbf7d0;
  padding: 0.5rem 0.75rem;
  border-radius: 6px;
  margin-bottom: 0.75rem;
  font-size: 0.8125rem;
  color: #166534;
}

.headers-info {
  background: white;
  padding: 0.5rem 0.625rem;
  border-radius: 4px;
  border: 1px solid #e5e7eb;
  margin-bottom: 0.5rem;
  font-size: 0.75rem;
  color: #6b7280;
}

.headers-info strong {
  color: #374151;
  margin-right: 0.375rem;
}

.form-select {
  width: 100%;
